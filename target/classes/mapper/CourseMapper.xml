<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.student.mapper.CourseMapper">

    <!-- 结果映射 -->
    <resultMap id="CourseResultMap" type="com.student.entity.Course">
        <id column="id" property="id"/>
        <result column="course_code" property="courseCode"/>
        <result column="course_name" property="courseName"/>
        <result column="credits" property="credits"/>
        <result column="teacher" property="teacher"/>
        <result column="semester" property="semester"/>
        <result column="created_time" property="createdTime"/>
        <result column="updated_time" property="updatedTime"/>
    </resultMap>

    <!-- 根据课程代码查询课程 -->
    <select id="findByCourseCode" resultMap="CourseResultMap">
        SELECT * FROM courses WHERE course_code = #{courseCode}
    </select>

    <!-- 根据ID查询课程 -->
    <select id="findById" resultMap="CourseResultMap">
        SELECT * FROM courses WHERE id = #{id}
    </select>

    <!-- 查询所有课程 -->
    <select id="findAll" resultMap="CourseResultMap">
        SELECT * FROM courses ORDER BY created_time DESC
    </select>

    <!-- 分页查询课程 -->
    <select id="findByPage" resultMap="CourseResultMap">
        SELECT * FROM courses ORDER BY created_time DESC LIMIT #{offset}, #{limit}
    </select>

    <!-- 根据课程名称模糊查询课程 -->
    <select id="findByCourseNameLike" resultMap="CourseResultMap">
        SELECT * FROM courses WHERE course_name LIKE CONCAT('%', #{courseName}, '%') ORDER BY created_time DESC
    </select>

    <!-- 根据教师查询课程 -->
    <select id="findByTeacher" resultMap="CourseResultMap">
        SELECT * FROM courses WHERE teacher = #{teacher} ORDER BY created_time DESC
    </select>

    <!-- 根据学期查询课程 -->
    <select id="findBySemester" resultMap="CourseResultMap">
        SELECT * FROM courses WHERE semester = #{semester} ORDER BY created_time DESC
    </select>

    <!-- 多条件查询课程 -->
    <select id="findByConditions" resultMap="CourseResultMap">
        SELECT * FROM courses
        <where>
            <if test="courseCode != null and courseCode != ''">
                AND course_code LIKE CONCAT('%', #{courseCode}, '%')
            </if>
            <if test="courseName != null and courseName != ''">
                AND course_name LIKE CONCAT('%', #{courseName}, '%')
            </if>
            <if test="teacher != null and teacher != ''">
                AND teacher = #{teacher}
            </if>
            <if test="semester != null and semester != ''">
                AND semester = #{semester}
            </if>
        </where>
        ORDER BY created_time DESC
    </select>

    <!-- 统计课程总数 -->
    <select id="countAll" resultType="int">
        SELECT COUNT(*) FROM courses
    </select>

    <!-- 根据条件统计课程数量 -->
    <select id="countByConditions" resultType="int">
        SELECT COUNT(*) FROM courses
        <where>
            <if test="courseCode != null and courseCode != ''">
                AND course_code LIKE CONCAT('%', #{courseCode}, '%')
            </if>
            <if test="courseName != null and courseName != ''">
                AND course_name LIKE CONCAT('%', #{courseName}, '%')
            </if>
            <if test="teacher != null and teacher != ''">
                AND teacher = #{teacher}
            </if>
            <if test="semester != null and semester != ''">
                AND semester = #{semester}
            </if>
        </where>
    </select>

    <!-- 插入课程 -->
    <insert id="insert" parameterType="com.student.entity.Course" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO courses (course_code, course_name, credits, teacher, semester)
        VALUES (#{courseCode}, #{courseName}, #{credits}, #{teacher}, #{semester})
    </insert>

    <!-- 更新课程 -->
    <update id="update" parameterType="com.student.entity.Course">
        UPDATE courses SET
            course_code = #{courseCode},
            course_name = #{courseName},
            credits = #{credits},
            teacher = #{teacher},
            semester = #{semester},
            updated_time = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>

    <!-- 根据ID删除课程 -->
    <delete id="deleteById">
        DELETE FROM courses WHERE id = #{id}
    </delete>

    <!-- 批量删除课程 -->
    <delete id="deleteByIds">
        DELETE FROM courses WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>
